
@{
	ViewData["Title"] = "SecVolume Chart";

	/// 20 = single row height; 30 = for axis height
	int hh = ViewBag.ChartItemsCount * 20 + 30;
}

@section scripts{
	<script>
		window.onload = function () {

			var chart = new CanvasJS.Chart("chartContainer", {
				height: @hh,
				animationEnabled: true,
				//title: [{
				//	text: "Размер всех позиций в процентах",
				//	//fontSize: 20,
				//	//maxWidth: 20
				//}],	
				axisX: 
				{
					labelFontSize: 15,
					interval: 1
				},
				axisY: {
					interval: 0.5,
					suffix: "%",
					minimum: 0,
					//interlacedColor: "rgba(1,77,101,.1)",
					labelFontSize: 20,
					gridColor: "rgba(1,77,101,.2)"
				},
				data: [{
					type: "bar",
					//indexLabel: "{y}",
					//axisYType: "secondary",
					color: "#014D65",
					dataPoints: @Html.Raw(ViewBag.ChartData)
			}]
			});
			chart.render();

		}
	</script>
}


<div class="container">
	<h3>Размер всех позиций в процентах</h3>
	<div id="chartContainer" style="width: 100%;"></div>
	<div>
		<p>https://canvasjs.com/html5-javascript-bar-chart/</p>		
	</div>
	<div>
		https://canvasjs.com/docs/charts/chart-options/height/
	</div>
</div>
